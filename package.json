{
  "name": "@actabl-pdesign/bellhop-ui",
  "version": "1.1.5",
  "description": "React UI components library with Tailwind CSS",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actabl-pdesign/bellhop-ui.git"
  },
  "author": "actabl-pdesign",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:css",
    "build:all": "rollup -c && npm run build:css && storybook build",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "dev": "rollup -c -w",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier": "prettier --write src/**/*.{ts,tsx}",
    "prettier:check": "prettier --check src/**/*.{ts,tsx}",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "release": "semantic-release"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@storybook/addon-a11y": "9.0.16",
